<p id="notice"><%= notice %></p>

<h1><b>Tasks</b></h1>

<h3 class="text-right">
  <div class="btn btn-light btn-outline-dark">
    <%= link_to 'New Task', new_project_task_path(@project, @task) %>
  </div>
</h3>


<table class="table table-hover">
  <thead>
    <tr>
      <th>Project</th>
      <th>Title</th>
      <th>Description</th>
      <th>Status</th>
      <th>User</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Spend time</th>
      <th>Estimated time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.project.title, task.project %></td>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.status %></td>
        <td><%= link_to task.user.name, task.user %></td>
        <td><%= task.start_date.strftime("%m/%d/%Y %H:%M") %></td>
        <td><%= task.end_date.strftime("%m/%d/%Y %H:%M") %></td>
        <td><%= task.spend_time %></td>
        <td><%= task.estimated_time %></td>
        <td><%= link_to 'Show', project_tasks_path(@project, @task), class:"btn btn-outline-dark" %></td>
        <td><%= link_to 'Edit', edit_project_task_path(@project, task), class:"btn btn-outline-dark" %></td>
        <td><%= link_to 'Destroy', url_for([@project, task]), method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-dark" %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<br>
<%= paginate @tasks %>
<%= page_entries_info @tasks %>
